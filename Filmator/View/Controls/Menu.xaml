<UserControl x:Class="Filmator.View.Controls.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:r="clr-namespace:Filmator.Resources.View"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="600">
    <Menu x:Name="MainMenu" IsMainMenu="True" Grid.Row="0">
        <MenuItem Header="{x:Static r:MainWindow.File}">
            <MenuItem Header="{x:Static r:MainWindow.Exit}"/>
        </MenuItem>
    </Menu>
</UserControl>
