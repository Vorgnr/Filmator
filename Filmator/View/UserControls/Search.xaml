<UserControl x:Class="Filmator.View.UserControls.Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             DataContext="{Binding Main, Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="100"
             d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="0,2,2,2" Width="205" Grid.ColumnSpan="2" Text="Recherche" TextAlignment="Center" Background="#95a5a6" Foreground="White" Padding="10"/>
        <TextBox  Margin="0,2,2,2" Width="175" Grid.Column="0" Grid.Row="1" Text="{Binding CustomSearch, Mode=TwoWay}"/>
        <Button Margin="0,2,2,2" Tag="Custom" Command="{Binding SetSearchStateCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag}" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</UserControl>
