<UserControl x:Class="Filmator.View.UserControls.SelectedMovie"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:r="clr-namespace:Filmator.Resources.View"
             DataContext="{Binding Main, Source={StaticResource Locator}}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Brush x:Key="MidnightBlue">#2c3e50</Brush>
    </UserControl.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock TextAlignment="Center" Grid.Row="1" FontSize="25" Text="{Binding SelectedMovie.Title}"/>
            <Button Grid.Row="2" 
                Content="{x:Static r:MainWindow.AddToMyMovies}"
                Command="{Binding AddToMyMoviesCommand}"
                CommandParameter="{Binding SelectedMovie.RemoteID}"/>
        </Grid>
</UserControl>
